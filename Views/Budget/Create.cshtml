@model nyobaa.Models.Budget

@{
    ViewData["Title"] = "Tambah Budget";
}

<h3>Tambah Budget</h3>

<form asp-action="Create">
    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="KategoriId" asp-items="ViewBag.Kategori" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Nama</label>
        <input asp-for="Nama" class="form-control" />
    </div>

    <div class="form-group">
        <label>Deskripsi</label>
        <textarea asp-for="Deskripsi" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Total Budget</label>
        <input asp-for="TotalBudget" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="IsRepeat" class="form-check-input" type="checkbox" />
        <label class="form-check-label" for="IsRepeat">Is Repeat?</label>
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Active">Active</option>
            <option value="Not Active">Not Active</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Simpan</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>
