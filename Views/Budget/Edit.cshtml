@model nyobaa.Models.Budget

@{
    ViewData["Title"] = "Edit Budget";
}

<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Edit Budget</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Kategori</label>
                <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.Kategori"></select>
            </div>

            <div class="form-group">
                <label>Nama</label>
                <input asp-for="Nama" class="form-control" />
            </div>

            <div class="form-group">
                <label>Deskripsi</label>
                <textarea asp-for="Deskripsi" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label>Total Budget</label>
                <input asp-for="TotalBudget" type="number" class="form-control" />
            </div>

            <div class="form-group">
                <label>Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>

            <div class="form-check">
                <input asp-for="IsRepeat" class="form-check-input" />
                <label asp-for="IsRepeat" class="form-check-label">Is Repeat?</label>
            </div>

            <div class="form-group mt-3">
                <label>Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="Active">Active</option>
                    <option value="Not Active">Not Active</option>
                </select>
            </div>

            <button type="submit" class="btn btn-warning">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>
