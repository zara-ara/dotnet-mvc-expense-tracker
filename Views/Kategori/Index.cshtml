@model IEnumerable<nyobaa.Models.Kategori>
@{
    ViewData["Title"] = "Master Data Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-3">Master Data Kategori</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">Tambah Kategori</a>

    <table id="kategoriTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tipe</th>
                <th>Nama</th>
                <th>Deskripsi</th>
                <th>Status</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tipe</td>
                    <td>@item.Nama</td>
                    <td>@item.Deskripsi</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Lihat</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Hapus</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#kategoriTable').DataTable();
        });
    </script>
}
