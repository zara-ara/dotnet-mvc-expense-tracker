@model nyobaa.Models.Kategori
@{
    ViewData["Title"] = "Update Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-6">
    <h2 class="mb-3">Edit Kategori</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Tipe</label>
            <select asp-for="Tipe" class="form-control">
                <option value="Income">Income</option>
                <option value="Expense">Expense</option>
            </select>
        </div>
        <div class="form-group">
            <label>Nama</label>
            <input asp-for="Nama" class="form-control" />
        </div>
        <div class="form-group">
            <label>Deskripsi</label>
            <textarea asp-for="Deskripsi" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Status</label>
            <select asp-for="Status" class="form-control">
                <option value="Active">Active</option>
                <option value="Not Active">Not Active</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Kembali</a>
    </form>
</div>
