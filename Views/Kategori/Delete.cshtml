@model YourApp.Models.Kategori
@{
    ViewData["Title"] = "Hapus Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Hapus Kategori</h1>
</section>

<section class="content">
    <div class="card card-danger">
        <div class="card-body">
            <h5>Apakah Anda yakin ingin menghapus data berikut?</h5>
            <dl class="row">
                <dt class="col-sm-3">Nama</dt>
                <dd class="col-sm-9">@Model.Nama</dd>

                <dt class="col-sm-3">Tipe</dt>
                <dd class="col-sm-9">@Model.Tipe</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Hapus</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Batal</a>
            </form>
        </div>
    </div>
</section>
