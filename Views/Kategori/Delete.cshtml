@model nyobaa.Models.Kategori
@{
    ViewData["Title"] = "Hapus Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-6">
    <h2 class="mb-3">Hapus Kategori</h2>

    <h5>Apakah Anda yakin ingin menghapus data ini?</h5>
    <dl class="row">
        <dt class="col-sm-4">Nama</dt>
        <dd class="col-sm-8">@Model.Nama</dd>

        <dt class="col-sm-4">Tipe</dt>
        <dd class="col-sm-8">@Model.Tipe</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Hapus</button>
        <a asp-action="Index" class="btn btn-secondary">Batal</a>
    </form>
</div>
