@model nyobaa.Models.Kategori
@{
    ViewData["Title"] = "Detail Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-6">
    <h2 class="mb-3">Detail Kategori</h2>

    <dl class="row">
        <dt class="col-sm-4">Tipe</dt>
        <dd class="col-sm-8">@Model.Tipe</dd>

        <dt class="col-sm-4">Nama</dt>
        <dd class="col-sm-8">@Model.Nama</dd>

        <dt class="col-sm-4">Deskripsi</dt>
        <dd class="col-sm-8">@Model.Deskripsi</dd>

        <dt class="col-sm-4">Status</dt>
        <dd class="col-sm-8">@Model.Status</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Kembali</a>
</div>
